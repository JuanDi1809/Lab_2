//Funcion crear matrices
int **crearMatriz(unsigned short int tam) {
    int **matriz = new unsigned int *[tam]; //Esto crea un arreglo de punteros
    short int posicionCentro = tam / 2, valor = 1;

    for (short int i = 0; i < tam; ++i) {
        matriz[i] = new int[tam];

        for (int j = 0; j < tam; ++j) {
            if (i == posicionCentro && j == posicionCentro) {
                matriz[i][j] = 0;
            }
            else {
                matriz[i][j] = valor;
                ++valor;
            }
        }
    }

    return matriz;
}

//Funcion liberar espacio de las matrices
void liberarMatriz(int **matriz, short int tam){
    
    for (short int i = 0; i < tam; ++i) {
        delete[] matriz[i];
    }
    delete[] matriz;
    
}
